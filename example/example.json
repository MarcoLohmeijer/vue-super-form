{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "title": "Name",
            "minLength": 3
        },
        "age": {
            "type": "number",
            "title": "Age",
            "minimum": 18,
            "maximum": 60
        },
        "checkboxes": {
            "type": "array",
            "title": "Multiple choices",
            "items": {
                "type": "string",
                "enum": [
                    "foo",
                    "bar",
                    "fuzz",
                    "qux"
                ]
            },
            "ui:widget": "checkbox"
        },
        "newsletter": {
            "type": "boolean",
            "title": "Newsletter"
        },
        "published": {
            "type": "boolean",
            "title": "Published?",
            "ui:widget": "switch"
        },
        "select": {
            "type": "array",
            "title": "Choice list",
            "items": {
                "type": "string",
                "enum": [
                    "foo",
                    "bar",
                    "fuzz",
                    "qux"
                ]
            }
        },
        "numberSelect": {
            "type": "number",
            "title": "Select",
            "enum": [
                1,
                2,
                3
            ]
        },
        "numberRadio": {
            "type": "number",
            "title": "Radio",
            "enum": [
                1,
                2,
                3
            ],
            "ui:widget": "radio"
        },
        "birthdate": {
            "type": "string",
            "title": "Birthdate",
            "format": "date"
        },
        "comments": {
            "type": "string",
            "title": "Comments",
            "ui:widget": "textarea",
            "ui:height": 5     
        }
    },
    "required": ["name", "age"]
}
  